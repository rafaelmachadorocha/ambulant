 <%= render 'shared/new_navbar' %>

<div class="card-profile p-1 mt-5">
  <%= image_tag 'https://thispersondoesnotexist.com/image', class: "avatar-bordered" %>
    <div class="card-profile-infos">
    <h2><%= @user.name %></h2>
    <p><strong>Rating <%= "4,5" %></strong></p>
    <p><%= @user.bio %></p>
  </div>
</div>

<% unless current_user.seller %>
  <div class="mt-3">
  <% if @inventory %>
    <%= link_to 'Quero comprar!', inventory_buyer_orders_path(@inventory, authenticity_token: form_authenticity_token), method: :post, class:"btn general quero" %>
  <% end %>
  </div>
<% else %>
  <div class="mt-3">
  <%= link_to 'Editar perfil', edit_seller_path, class:"btn general" %>
  </div>
<% end %>

<% if @inventory %>
  <div class="profile-card inventory mt-3">
    <div class="w-100">    
      <h3 class="text-center"><%= @inventory.name %></h3>
      <p class="text-center mb-0"><%= @inventory.description %></p>
      <% @inventory&.products&.each do |product| %>
      <h4 class="text-center"><%= product.name %> - R$<%= product.price %>
      <% if current_user.seller %>
      - <%= link_to "editar", edit_product_path(product.id) %>
      <%= link_to product_path(product), method: :delete do%>
        <i class="far fa-trash-alt"></i>
      <% end %>
      <% end %></h4>
      <% end %>
      <% if current_user.seller %>
      <%= link_to "Novo produto", new_product_path, class: "btn general" %>
      <% end %>

      <%= render 'carousel_show' %>

    </div>
  </div>
<% end %>

