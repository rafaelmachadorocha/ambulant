<div class='container'>

  <h2><%= @user.name %></h2>
  <h3><%= @inventory.name %></h3>
  <p><%= @inventory.description %></p>
  <% @inventory.photos.each do |photo| %>
    <%=  cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <%= link_to 'Quero', inventory_buyer_orders_path(@inventory, authenticity_token: form_authenticity_token), method: :post %>
  <%= link_to "Back", sellers_path %>
</div>
