<%= render 'shared/new_navbar' %>
<div class="container no-padding" style="overflow: hidden;">
<% @orders.each_with_index do |order, index| %>
  <div class="order-item order-color-<%= order.accepted %>">

    <div class="row text-center">
      <div class="col text-center">
        <p> Pedido <%= @orders.length - index %></p>
      </div>
      <div class="col text-center">
        <p><%= order.user.name %></p>
      </div>
    </div>

    <% if order.accepted == 1 %>

      <div class="row">
        <div class="col text-center">
          <p id="order-<%= order.id %>"><strong>Aguardando sua resposta:</strong></p>
        </div>
      </div>
      <div class="row text-center">
        <div class="col">
          <%= render 'shared/seller_order', order: order %>
        </div>
      </div>

    <% elsif order.accepted == 2 %>

      <div class="row">
        <div class="col text-center">
          <p id="order-<%= order.id %>"><strong>Pedido aceito</strong></p>
          <p> Pre√ßo total: <%= Money.new(order.price).format %></p>
        </div>
      </div>

    <% else %>

      <div class="row">
        <div class="col text-center">
          <p id="order-<%= order.id %>"><strong>Pedido negado</strong></p>
        </div>
      </div>

    <% end %>
  </div>
<% end %>
</div>

