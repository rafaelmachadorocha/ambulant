<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, label: 'Nome',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" } %>
      <%= f.input :email, label: 'Email',
                  required: true,                  
                  input_html: { autocomplete: "email" }%>
      <%= f.input :address, label: "EndereÃ§o", required: true %>
      <%= f.input :seller, label: "Quer se cadastrar como vendedor?", as: :radio_buttons,
                  wrapper: :vertical_collection_inline %>     
      <%= f.input :password, label: 'Senha',
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: 'Confirme sua senha',
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrar", class: 'btn general mb-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
