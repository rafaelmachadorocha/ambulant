 <%= render 'shared/navbar' %>

<div id="seller-view" data-seller-id="<%= current_user.id %>">
  <% @buyers.each do |buyer| %>
  <%= buyer.address %>
  <p>
    <%= buyer.name %>
  </p>
  <% end %>

<div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

